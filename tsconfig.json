{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "sourceMap": true,
        "inlineSources": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "./tmp",
        "rootDir": ".",
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types"],
        "types": [
            "node",
            "fs-extra",
            "mongoose",
            "gridfs-stream"
        ],
        "lib": [
            "dom",
            "es2015"
        ]
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "exclude": [
        "node_modules",
        "dist",
        "tmp"
    ]
}
